source ~/.zprezto/runcoms/zshrc

[ -f ~/.zshrc_local ] && source ~/.zshrc_local

if is-callable 'dircolors'; then
  alias ls='ls --group-directories-first'
  alias ls='ls --color=auto'
else
  alias ls='ls -G'
  export CLICOLOR=1
  export LSCOLORS=ExFxBxDxCxegedabagacad

  # print ACL
  alias ls='ls -e'
fi

alias lah='ls -lah'
alias l='ls'
alias sl='ls'
alias s='sudo'
