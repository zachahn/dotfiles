// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "f12": "editor::GoToDefinition",
      "ctrl-p": "file_finder::Toggle",
      "cmd-t": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-shift-g": "vim::ShowLocation",
      "alt-cmd-c": "editor::CopyRelativePath",
      "ctrl-g": ["workspace::SendKeystrokes", "ctrl-shift-g alt-cmd-c"],
      "_": "tab_switcher::ToggleAll",
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "!ContextEditor > (Editor && mode == full) && vim_mode == normal",
    "bindings": {
      "-": "pane::RevealInProjectPanel"
    }
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "escape": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "(VimControl || (!Editor))",
    "bindings": {
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  }
]
